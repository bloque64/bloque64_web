{
    "compilerOptions": {
        "experimentalDecorators": true,
      "target": "es2018",
      
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
        "DOM",
        "ES5",
        "ES6",
        "DOM.Iterable"
      ],
      "typeRoots": [ "./types", "./node_modules/@types"],
      // configurations for ts-node
      "rootDir": "src",
      // Remember change module to esnext
      "module": "esnext",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      // ----------
      "esModuleInterop": true,
      "emitDecoratorMetadata" : true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@types/node",        
        "@nuxt/types",
      ]
    },
    "exclude": [
      "node_modules",
      "types"
    ],
    
    

  }