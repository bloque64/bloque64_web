{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/utils/inversify.config.ts",
            "outFiles": ["${workspaceFolder}/**/*.js"],
            "preLaunchTask": "tsc: build - tsconfig.json"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to nuxt",
            "port": 9229,
            
        }

    ]
}