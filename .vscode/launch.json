{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "attach",
        "name": "client: chrome",
        "url":"http://localhost:9222",
        "port": 9222,
        "sourceMaps": true,
        "webRoot": "${workspaceFolder}",
        
      },
      {
        "type": "node",
        "request": "launch",
        "name": "server: nuxt",
        "args": ["dev", "--sourcemap"],
        
        "osx": {
          "program": "${workspaceFolder}/node_modules/.bin/nuxt"
        },
        "sourceMaps": true,
        "linux": {
          "program": "${workspaceFolder}/node_modules/.bin/nuxt"
        },
        "windows": {
          "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.js"
        }
      }
    ],
    "compounds": [
      {
        "name": "fullstack: nuxt",
        "configurations": ["server: nuxt", "client: chrome"]
      }
    ]
  }